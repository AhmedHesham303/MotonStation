{
  "manifest_version": 3,
  "name": "إذاعة المتون الشرعية",
  "version": "1.0",
  "description": "استمع إلى المتون الشرعية بأصوات المشايخ الموثوقين.",
  "action": {
    "default_popup": "index.html",
    "default_title": "إذاعة المتون الشرعية",
    "default_icon": {
      "16": "assets/icons8-mosque-color-16.png",
      "32": "assets/icons8-mosque-color-32.png",
      "96": "assets/icons8-mosque-color-96.png"
    }
  },
  "icons": {
    "16": "assets/icons8-mosque-color-16.png",
    "32": "assets/icons8-mosque-color-32.png",
    "48": "assets/icons8-mosque-color-96.png"
  },
  "permissions": ["storage", "offscreen"],
  "host_permissions": [
    "https://files.a-alqasim.com/*",
    "https://media.islamway.net/*",
    "https://www.mimham.net",
    "https://radio.alukah.ne"
  ],
  "background": {
    "service_worker": "popup.js"
  },
  "offscreen_documents": [
    {
      "url": "offscreen.html",
      "reasons": ["AUDIO_PLAYBACK"],
      "justification": "To allow continuous audio playback even when the popup window is closed."
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
